
@using ProjetSIM.Models
@model Utilisateur
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row setHauteur">
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Utilisez un compte local pour vous connecter.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.nomUtilisateur , new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.nomUtilisateur, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.nomUtilisateur, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.motDePasse, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.motDePasse, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.motDePasse, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Connexion" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("S'inscrire comme nouvel utilisateur", "Register")
                </p>
                @* Activer ceci une fois que la confirmation de votre compte est activée pour la fonctionnalité de réinitialisation du mot de passe
                <p>
                    @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ForgotPassword")
                </p>*@
            }
        </section>
    </div>
    <div class="row setHauteur">
    </div>
</div>
